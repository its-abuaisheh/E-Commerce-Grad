@model List<Category>

<section class="content">
      <div class="container-fluid">
     
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
             

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <a asp-action="Create" asp-controller="Categories" asp-area="Admin" class="btn btn-outline-success"> Add Catgory</a>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0" style="height: 300px;">
                <table class="table table-head-fixed">
                  <thead>
                    <tr>
                      <th>Category Name</th>
                      <th>Image</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                      @foreach (var item in Model)
                      {
                          <tr> 
                              <td>@item.CategoryName</td>
                              <td>
                                  <img src="~/category/@item.CategoryImage" style="width:150px; height:150px;" />
                              </td>
                              <td>
                                  <a asp-action="Edit" asp-controller="Categories" asp-route-id="@item.CategoryID" class="btn btn-outline-primary">
                                      Edit Category
                                  </a>
                                    <a asp-action="Delete" asp-controller="Categories"  asp-route-id="@item.CategoryID" class="btn btn-outline-danger">
                                      Delete Category
                                  </a>
                              </td> 
                            </tr>  
                      }
                    

                  </tbody>
                </table>
              </div>
              
            </div>
 
          </div>
        </div>
        
      </div> 
    </section>